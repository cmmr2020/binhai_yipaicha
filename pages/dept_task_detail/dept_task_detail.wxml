      <button role="button" class="cu-btn bg-{{bgColor}} "  data-actionType="1" bindtap="changeTask">提交</button>
    </view>
    <view class=" margin-xs radius">
      <button role="button" class="cu-btn bg-{{bgColor}} " data-actionType="2" bindtap="changeTask">不合格</button>
