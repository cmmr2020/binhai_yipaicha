<!-- 举报图片/视频 -->
<view class="cu-bar  solid-bottom bg-white-user">
  <view class="action">
    <text class="cuIcon-title text-{{bgColor}}"></text><text style="font-size:{{fontSize}}rpx">整改上传</text>
  </view>
</view>
<view class="padding bg-white text-center">
  <view wx:for="{{que_res_img}}" wx:key="index">
    <view class="padding solids">
      <view class="grid col-2 grid-square flex-sub">
        <view class="solids bg-img"  bindtap="ViewMedia" data-url="{{que_res_img[index].url}}" data-type="0">
          <image src='{{que_res_img[index].url}}' mode='aspectFill' style="max-width: 100%;">
            <view class="cu-tag badge">问题</view>
          </image>
        </view>
        <view class="solids bg-img">
          <view wx:if="{{zgResMap[que_res_img[index].id]}}">
            <image src="{{zgResMap[que_res_img[index].id].url}}" mode='aspectFill' style="max-width: 100%;" bindtap="ViewMedia" data-url="{{zgResMap[que_res_img[index].id].url}}" data-type="0">
              <view hidden="{{isTijiao || (tabCur!=0 && tabCur!=1) || deptResult == 1}}" style="left: 0px;" class="cu-tag2 bg-red" catchtap="DelImg" data-quesResId="{{que_res_img[index].id}}" data-type="0">
                <text class="cuIcon-close"></text>
              </view>
              <view class="cu-tag badge">整改</view>
            </image>
          </view>
          <!--bindtap="showModal2"-->
          <view wx:else>
            <view wx:if="{{(isTijiao && !hanldFlag) || ((tabCur!=0 && tabCur!=1)&&!zgResMap[que_res_img[index].id])}}" style="text-align: center;">
              <text class="cuIcon-time" style="font-size: 200rpx;"></text>
              <view class="cu-tag badge">未上传整改</view>
            </view>
            <view wx:else bindtap="ChooseImage" data-quesResId="{{que_res_img[index].id}}" data-target="Modal" data-type="report" style="text-align: center;">
              <text class="cuIcon-cameraadd" style="font-size: 200rpx;"></text>
              <view class="cu-tag badge">整改</view>
            </view>
          </view>
        </view>
        <!--countdown-->
      </view>
    </view>
  </view>
  <view wx:for="{{que_res_video}}" wx:key="index">
    <view class="padding solids">
      <view class="grid col-2 grid-square flex-sub">
        <view class="solids bg-img" bindtap="ViewVideoForreport" data-url="{{que_res_video[index].url}}" data-index="{{index}}">
          <video style="max-width: 100%;height: 160px;" id='reportVideo{{index}}' src="{{que_res_video[index].url}}" poster="{{que_res_video[index].poster}}" bindfullscreenchange="start">
            <view class="cu-tag badge" style=" margin-top: 4%;">问题</view>
          </video>
        </view>
        <view class="solids bg-img">
          <view wx:if="{{zgResMap[que_res_video[index].id]}}" bindtap="ViewVideoForreport" data-url="{{zgResMap[que_res_video[index].id].url}}" data-type="2" data-index="{{index}}">
            <video style="max-width: 100%;height: 160px;" src="{{zgResMap[que_res_video[index].id].url}}" poster="{{zgResMap[que_res_video[index].id].poster}}" data-type="0">
              <view hidden="{{isTijiao || (tabCur!=0 && tabCur!=1)|| deptResult == 1}}" style="left: 0px;" class="cu-tag2 bg-red" catchtap="DelImg" data-quesResId="{{que_res_video[index].id}}" data-type="2">
                <text  class="cuIcon-close"></text>
              </view>
              <view class="cu-tag badge" style=" margin-top: 4%;">整改</view>
            </video>
          </view>
          <view wx:else>
            <view wx:if="{{isTijiao && !hanldFlag}}" style="text-align: center;">
              <text class="cuIcon-time" style="font-size: 200rpx;"></text>
              <view class="cu-tag badge">未上传整改</view>
            </view>
            <view wx:else bindtap="chooseVideo" data-target="Modal" data-type="report" style="text-align: center;" data-quesResId="{{que_res_video[index].id}}">
              <text class="cuIcon-cameraadd" style="font-size: 200rpx;"></text>
              <view class="cu-tag badge">整改</view>
            </view>
          </view>
        </view>
        <!--countdown2-->
      </view>
    </view>
  </view>
</view>

