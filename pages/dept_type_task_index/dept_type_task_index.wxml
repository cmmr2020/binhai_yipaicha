</view>
</scroll-view>
<view class="imagesize {{isNull=='true'?'show':'hide'}}">
  <image src='/images/null.png' mode='scaleToFill' style='height:100%;width:100%'></image>
</view>

<!--整改单列表弹窗-->
<view class="DrawerClose {{modalName=='viewModal'?'show':''}}" bindtap="hideModal" style="padding-bottom: 15%;">
			<text class="cuIcon-pullright"></text>
</view>
<scroll-view scroll-y class="DrawerWindow {{modalName=='viewModal'?'show':''}}" style="padding-bottom: 15%;">
  <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg">
  <view class="cu-bar bg-white solid-bottom">
  <view class="action">
    <text class="cuIcon-titles text-orange"></text>
    {{zgListTitle}}
  </view>
  </view>
    <view class="cu-item arrow" wx:for="{{zgOticeList}}" wx:key="index">
      <view class="content" bind:tap="showZgOtice" data-id="{{item.id}}" data-url="{{item.pageUrl}}" data-name="{{item.name}}">
        <text wx:if="{{selectzgOticeId == item.id}}"  class="cuIcon-tag lg text-{{bgColor}}" style="font-size:{{fontSize30}}rpx"></text>
        <text style="font-size:{{fontSize30}}rpx">{{item.name}}</text>
      </view>
    </view>
  </view>
</scroll-view>
