<!-- 搜索弹窗抽屉-->
<view class="cu-modal drawer-modal justify-start {{modalName=='DrawerModalL'?'show':''}}" bindtap="hideModal">
  <view class="cu-dialog basis-lg" catchtap style="top:{{CustomBar}}px;height:calc(100vh - {{CustomBar}}px)">
    <view class="cu-list menu text-left">
      <form>
        <view class="cu-form-group">
          <input placeholder="信息类型" data-type="sort" bindblur="task_code_input" value="{{task_request_dataParam.qsort}}"></input>
        </view>
        <view class="cu-form-group">
          <input placeholder="信息描述" data-type="remarks" bindblur="task_code_input" value="{{task_request_dataParam.remarks}}"></input>
        </view>
        <view class="cu-form-group">
          <input placeholder="点位" data-type="location" bindblur="task_code_input" value="{{task_request_dataParam.locationName}}"></input>
        </view>
        <view class="cu-form-group">
          <input placeholder="上报地点" data-type="address" bindblur="task_code_input" value="{{task_request_dataParam.address}}"></input>
        </view>
        <view class="cu-form-group">
          <input placeholder="责任单位" data-type="departmentName" bindblur="task_code_input" value="{{task_request_dataParam.deptNames}}"></input>
        </view>
        <view class="cu-form-group">
          <input placeholder="地理位置" data-type="addRemark" bindblur="task_code_input" value="{{task_request_dataParam.addRemark}}"></input>
        </view>
        <view class="cu-form-group">
          <picker mode="date" value="{{task_request_dataParam.startTime}}" start="2017-01-01" end="2050-12-30" bindchange="DateChange" data-type="0">
            <view class="picker" style="text-align: left;font-size: 30rpx;">
              开始日期: {{task_request_dataParam.startTime}}
            </view>
          </picker>
        </view>
        <view class="cu-form-group">
          <picker mode="date" value="{{task_request_dataParam.endTime}}" start="2017-01-01" end="2050-12-30" bindchange="DateChange" data-type="1">
            <view class="picker" style="text-align: left;font-size: 30rpx;">
              结束日期: {{task_request_dataParam.endTime}}
            </view>
          </picker>
        </view>
        <view class="cu-form-group">
          <button bindtap="clean_date" role="button" class="cu-btn bg-{{bgColor}} margin-tb-sm lg" aria-disabled="false" style="width: 100%;">清空日期</button>
        </view>
        <view class="cu-form-group">
          <button bindtap="search_fun" role="button" class="cu-btn bg-{{bgColor}} margin-tb-sm lg" aria-disabled="false" style="width: 100%;">搜索</button>
        </view>
      </form>
    </view>
  </view>
</view>