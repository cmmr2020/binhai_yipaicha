<scroll-view scroll-y ="true" enable-back-to-top="true"  scroll-into-view="{{cardId}}" 	scroll-into-view-offset="-200"	bindscrolltolower="loadMore" class="DrawerPage {{modalName=='viewModal'?'show':''}}">
<view class="solid">
  <!-- 导航栏-->
  <scroll-view scroll-x class="bg-white nav text-center" scroll-with-animation scroll-left="{{scrollLeft}}">
    <view class="flex text-center ">
    <view class="cu-item flex-sub {{item.id==TabCur?'text-blue':'text-grey'}} cu-btn  round linebordersize {{}}" wx:for="{{tab}}" wx:key="index" bindtap="tabSelect" style="font-size:{{fontSize}}rpx" data-id="{{item.id}}">
      {{item.name}}
    </view>
    </view>
  </scroll-view>
  <view class="text-right" style="margin-right: 1%;float: right;width: 45%;margin-top: 3%;"> 当前状态下信息总数为：{{pageCount}} </view>
  <!-- 搜索图标 -->
  <view class="cu-item" bindtap="showSearchModal" data-target="DrawerModalL" style="{{isNull=='true'?'position: fixed;z-index: 1000;':''}}">
    <text class="cuIcon-search lg text-{{bgColor}}" style="font-size: 65rpx;position: fixed;right: 0rpx;margin-top: 150rpx;width:80rpx"></text>
  </view>
  <!-- 任务列表 -->
    <view class="cu-card article" style="width: 100%;{{(TabCur==3 || TabCur==2) == true?'margin-top: 60rpx;':''}}">
      <!--待审核-->
      <view wx:if="{{TabCur==4}}" wx:for="{{quesList}}" wx:key="index2" class="cu-item shadow">
        <!-- 任务列表 -->
        <view class="flex solid-bottom padding justify-between">
          <view class="action" style="width: 100%;">
            <text class="cuIcon-news lg  text-{{bgColor}}" style="font-size:{{fontSize}}rpx;margin-left: 20rpx;margin-right:10rpx"></text>
            <text class="text-blue" style="font-size:{{fontSize}}rpx">待审核</text>
          </view>
          <view class="cu-capsule round" style="margin-right: 1%;">
            <view class="cu-tag bg-{{bgColor}}">No.</view>
            <view class="cu-tag line-{{bgColor}}">{{index+1}}</view>
          </view>
        </view>
        <view id="task_index_{{index}}" data-taskid="{{item.id}}" data-projectid="{{item.projectId}}" bindtap="goDetailPage">
          <view><text class="td-test" user-select="true">上报时间：{{item.creatTime}}</text></view>
          <view class="divLine"></view>
          <view><text class="td-test" user-select="true">信息类型：{{item.queSort || '无'}}</text></view>
          <!-- 分割线 -->
          <view class="divLine"></view>
          <view><text class="td-test" user-select="true">信息描述：{{item.remarks || '无'}}</text></view>
          <!-- 分割线 -->
          <view class="divLine"></view>
          <view><text class="td-test" user-select="true">上报点位：{{item.locationName || '无'}}</text></view>
          <!-- 分割线 -->
          <view class="divLine"></view>
          <view><text class="td-test" user-select="true">地理位置：{{item.addRemark == 'undefined'?'无':item.addRemark || '无'}}</text></view>
          <!-- 分割线 -->
          <view class="divLine"></view>
          <view><text class="td-test" user-select="true">上报地点：{{item.address}}</text></view>
          <view class="divLine"></view>
          <view>
            <text class="td-test" user-select="true">责任单位：{{item.deptName || '待分配'}}</text>
          </view>
        </view>
      </view>
      <!--有效问题-->
      <view wx:if="{{TabCur==1}}" wx:for="{{quesList}}" wx:key="index2" class="cu-item shadow">
        <!-- 任务列表 -->
        <view class="flex solid-bottom padding justify-between">
          <view class="action" style="width: 100%;">
            <text class="cuIcon-news lg  text-{{bgColor}}" style="font-size:{{fontSize}}rpx;margin-left: 20rpx;margin-right:10rpx"></text>
            <text class="text-blue" style="font-size:{{fontSize}}rpx">有效信息</text>
          </view>
          <view class="cu-capsule round" style="margin-right: 1%;">
            <view class="cu-tag bg-{{bgColor}}">No.</view>
            <view class="cu-tag line-{{bgColor}}">{{index+1}}</view>
          </view>
        </view>
        <view id="task_index_{{index}}" data-taskid="{{item.id}}" data-projectid="{{item.projectId}}" bindtap="goDetailPage">
          <view><text class="td-test" user-select="true">上报时间：{{item.creatTime}}</text></view>
          <view class="divLine"></view>
          <view><text class="td-test" user-select="true">信息类型：{{item.queSort || '无'}}</text></view>
          <!-- 分割线 -->
          <view class="divLine"></view>
          <view><text class="td-test" user-select="true">信息描述：{{item.remarks || '无'}}</text></view>
          <!-- 分割线 -->
          <view class="divLine"></view>
          <view><text class="td-test" user-select="true">上报点位：{{item.locationName || '无'}}</text></view>
          <!-- 分割线 -->
          <view class="divLine"></view>
          <view><text class="td-test" user-select="true">地理位置：{{item.addRemark == 'undefined'?'无':item.addRemark || '无'}}</text></view>
          <!-- 分割线 -->
          <view class="divLine"></view>
          <view><text class="td-test" user-select="true">上报地点：{{item.address}}</text></view>
          <view class="divLine"></view>
          <view>
            <text class="td-test" user-select="true">责任单位：{{item.deptName || '待分配'}}</text>
          </view>
        </view>
      </view>
      <!--无效问题-->
      <view wx:if="{{TabCur==0}}" wx:for="{{quesList}}" wx:key="index1" class="cu-item shadow">
        <!-- 任务列表 -->
        <view class="flex solid-bottom padding justify-between">
          <view class="action" style="width: 100%;">
            <text class="cuIcon-news lg  text-{{bgColor}}" style="font-size:{{fontSize}}rpx;margin-left: 20rpx;margin-right:10rpx"></text>
            <text class="text-blue" style="font-size:{{fontSize}}rpx">无效信息</text>
          </view>
          <view class="cu-capsule round" style="margin-right: 1%;">
            <view class="cu-tag bg-{{bgColor}}">No.</view>
            <view class="cu-tag line-{{bgColor}}">{{index+1}}</view>
          </view>
        </view>
        <view id="task_index_{{index}}" data-taskid="{{item.id}}" data-projectid="{{item.projectId}}" bindtap="goDetailPage">
          <view><text class="td-test" user-select="true">上报时间：{{item.creatTime}}</text></view>
          <view class="divLine"></view>
          <view><text class="td-test" user-select="true">信息类型：{{item.queSort || '无'}}</text></view>
          <!-- 分割线 -->
          <view class="divLine"></view>
          <view><text class="td-test" user-select="true">信息描述：{{item.remarks || '无'}}</text></view>
          <!-- 分割线 -->
          <view class="divLine"></view>
          <view><text class="td-test" user-select="true">上报点位：{{item.locationName || '无'}}</text></view>
          <!-- 分割线 -->
          <view class="divLine"></view>
          <view><text class="td-test" user-select="true">地理位置：{{item.addRemark == 'undefined'?'无':item.addRemark || '无'}}</text></view>
          <!-- 分割线 -->
          <view class="divLine"></view>
          <view><text class="td-test" user-select="true">上报地点：{{item.address}}</text></view>
          <view class="divLine"></view>
          <view>
            <text class="td-test" user-select="true">责任单位：{{item.deptName || '待分配'}}</text>
          </view>
        </view>
      </view>
    </view>
</view>
</scroll-view>
